<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.DetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:layout_alignParentStart="true"
                android:background="@drawable/shape_round_rectangular_lighter_gray_10"
                android:layout_marginStart="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-medium" />


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginHorizontal="20dp"
            app:cardElevation="0dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        </androidx.cardview.widget.CardView>
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical">


        <FrameLayout
            android:id="@+id/download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/adawd"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_round_rectangular_lighter_gray_30"
            android:layout_marginStart="20dp"
            android:text="@string/download"
            android:paddingStart="20dp"
            android:textAllCaps="false"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/shape_round_circle_red"
            android:src="@drawable/ic_download"
            android:padding="13dp"
            android:layout_alignParentStart="true"
            android:elevation="2dp"/>

        </FrameLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_round_rectangular_lighter_gray_30"
            android:src="@drawable/ic_bookmark"
            android:padding="10dp"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>